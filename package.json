{
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run watch-compile\" \"pnpm run docker-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "docker-dev": "docker build -t dev-watch -f Dockerfile.dev . && docker run -p 3000:3000 -v ./:/usr/src/app -v /usr/src/app/node_modules --rm dev-watch",
    "watch-dev": "nodemon -L --watch \"dist/**/*\" -e js ./dist/server.js",
    "watch-dev-local": "nodemon --watch \"dist/**/*\" -e js ./dist/server.js",
    "build": "swc src -d dist",
    "start": "NODE_ENV=production node dist/server.js",
    "test": "docker build -t jest-test -f Dockerfile.test . && docker run --rm jest-test",
    "test-local": "pnpm build && jest"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.6.8",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.102",
    "@swc/jest": "^0.2.29",
    "@tsconfig/node20": "^20.1.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
